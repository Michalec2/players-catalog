@model players_catalog.Models.TeamFormModel

<h2 class="text-center my-4">Dodaj Zespół</h2>

@using (Html.BeginForm())
{
    <div class="form-group mb-3">
        <label for="Name" class="form-label">Nazwa Zespołu</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Podaj nazwę zespołu" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        <label for="CoachId" class="form-label">Trener</label>
        <select name="CoachId" class="form-control">
            @foreach (var coach in ViewBag.Coaches)
            {
                <option value="@coach.Id">@coach.Name</option>
            }
        </select>
    </div>

    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary">Zapisz</button>
    </div>
}
