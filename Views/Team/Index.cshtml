@model List<players_catalog.Models.TeamViewmodel>

<h2 class="text-center my-4">Lista Zespołów</h2>

<table class="table table-hover table-striped">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Nazwa</th>
            <th>Trener</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var team in Model)
        {
            <tr>
                <td>@team.Id</td>
                <td>@team.Name</td>
                <td>@team.CoachName</td>
            </tr>
        }
    </tbody>
</table>

<a href="/Team/Create" class="btn btn-success mt-3">Dodaj Zespół</a>
